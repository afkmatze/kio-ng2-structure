{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./release",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [
      "es6","es2015","es2016","dom"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "node_modules",
    "release"
  ]
}
